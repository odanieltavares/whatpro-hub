# =============================================================================
# WhatPro Hub - Production Environment Variables Template
# =============================================================================
# INSTRUCTIONS:
# 1. Run: ./scripts/generate-secrets.sh > .env.production
# 2. Update placeholders with your actual values
# 3. Secure the file: chmod 600 .env.production
# 4. NEVER commit .env.production to git
# =============================================================================

# =============================================================================
# PostgreSQL
# =============================================================================
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD
POSTGRES_DB=whatpro_hub
PGSSLMODE=prefer

# =============================================================================
# Redis
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD

# =============================================================================
# Chatwoot
# =============================================================================
CHATWOOT_SECRET_KEY_BASE=CHANGE_ME_GENERATE_128_CHAR_SECRET
INSTALLATION_ENV=docker
FRONTEND_URL=https://chat.yourdomain.com
FORCE_SSL=true
ENABLE_ACCOUNT_SIGNUP=false
ENABLE_RACK_ATTACK=true
CHATWOOT_DOMAIN=chat.yourdomain.com

# =============================================================================
# WhatPro Hub API
# =============================================================================
APP_ENV=production
APP_PORT=3000
DATABASE_URL=postgresql://postgres:POSTGRES_PASSWORD@pgvector:5432/whatpro_hub?sslmode=require
REDIS_URL=redis://:REDIS_PASSWORD@redis:6379
CHATWOOT_URL=http://chatwoot_app:3000
CHATWOOT_API_KEY=SET_THIS_AFTER_CHATWOOT_SETUP
JWT_SECRET=CHANGE_ME_GENERATE_64_CHAR_SECRET
ENCRYPTION_KEY=CHANGE_ME_EXACTLY_32_BYTES
CORS_ORIGINS=https://app.yourdomain.com,https://chat.yourdomain.com
API_DOMAIN=api.yourdomain.com

# =============================================================================
# Traefik
# =============================================================================
TRAEFIK_DASHBOARD=true
TRAEFIK_AUTH_USER=admin:$apr1$HASH_OF_PASSWORD
TRAEFIK_DOMAIN=traefik.yourdomain.com
LETSENCRYPT_EMAIL=admin@yourdomain.com

# =============================================================================
# Portainer (Optional - recommend disabling in production)
# =============================================================================
PORTAINER_DOMAIN=portainer.yourdomain.com

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=
