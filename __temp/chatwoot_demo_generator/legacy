REM Verificar Python
where python >nul 2>nul
if %errorlevel% neq 0 (
    where py >nul 2>nul
    if %errorlevel% neq 0 (
        echo ‚ùå Python nao encontrado!
        echo.
        echo Por favor, instale Python:
        echo https://www.python.org/downloads/
        echo.
        echo IMPORTANTE: Marque "Add Python to PATH" na instalacao!
        pause
        exit /b 1
    ) else (
        set PYTHON=py
    )
) else (
    set PYTHON=python
)

echo ‚úÖ Python encontrado
echo.

REM Executar inicializador
%PYTHON% iniciar.py

REM Se der erro, manter janela aberta
if %errorlevel% neq 0 (
    echo.
