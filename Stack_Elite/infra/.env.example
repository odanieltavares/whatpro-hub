# ==========================================
# ELITE SDR STACK — Environment Variables
# ==========================================

# ── Core Orquestration (n8n & Network)
DOMAIN_NAME=seudominio.com.br
SUBDOMAIN=n8n
WEBHOOK_SECRET=super_secret_webhook_key_123

# ── Postgres (pgvector)
POSTGRES_USER=elite_admin
POSTGRES_PASSWORD=ultra_secure_elite_pass
POSTGRES_DB=elite_sdr_db
DATABASE_URL=postgresql://elite_admin:ultra_secure_elite_pass@postgres:5432/elite_sdr_db

# ── Redis
REDIS_PASSWORD=another_secure_redis_pass

# ── Chatwoot MCP (Integration)
CHATWOOT_URL=https://chat.seudominio.com.br
CHATWOOT_API_KEY=your_chatwoot_bot_or_admin_token
CHATWOOT_ACCOUNT_ID=1

# ── LLMs & Observability
GEMINI_API_KEY=AIzaSy...
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_SALT=any_random_string_for_hashing
LANGFUSE_NEXTAUTH_SECRET=another_random_string_for_auth

# ── Micro-Models (Opcional se for local, mas aqui podemos apontar para os containers)
RAG_SERVICE_URL=http://rag_api:8000
WHISPER_URL=http://whisper_api:9000
VISION_URL=http://vision_api:8000
N8N_ENCRYPTION_KEY=your_encryption_key_here
