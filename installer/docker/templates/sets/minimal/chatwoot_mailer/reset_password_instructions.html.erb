<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Reset password</title>
  </head>
  <body style="margin:0;background:#ffffff;font-family:Arial,Helvetica,sans-serif;color:#111827;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" style="padding:32px;">
      <tr>
        <td>
          <h1 style="margin:0 0 12px 0;font-size:20px;">Reset password</h1>
          <p style="margin:0 0 16px 0;line-height:1.6;">Hello <strong><%= @resource.email %></strong>, click the link below to reset your password:</p>
          <p style="margin:0 0 16px 0;"><a href="<%= edit_password_url(@resource, reset_password_token: @token) %>">Reset password</a></p>
          <p style="margin:0;color:#6b7280;font-size:12px;">If you did not request this, ignore this email.</p>
        </td>
      </tr>
    </table>
  </body>
</html>
